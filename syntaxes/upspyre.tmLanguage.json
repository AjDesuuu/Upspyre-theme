{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "upspyre-syntax",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#special-symbols"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.upspyre",
          "match": "\\b(start|end|if|otherwise|repeat|until|for|stop|continue|method|output|get|show)\\b"
        },
        {
          "name": "constant.language.upspyre",
          "match": "\\b(true|false|none)\\b"
        },
        {
          "name": "storage.type.upspyre",
          "match": "\\b(number|decimal|text|binary|list_of|pair_map)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.upspyre",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.operator.upspyre",
          "match": "\\+|-|\\*|/|%|\\*\\*|//|==|!=|<|>|<=|>=|&|\\||\\^|~|<<|>>|\\+=|-=|\\*=|="
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.upspyre",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.upspyre",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.upspyre",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "comments": {
      "name": "comment.line.double-slash.upspyre",
      "begin": "//",
      "end": "$"
    },
    "special-symbols": {
      "patterns": [
        {
          "name": "punctuation.definition.upspyre",
          "match": "[(){}\\[\\];,:.]"
        }
      ]
    }
  },
  "scopeName": "source.upspyre"
}
